{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Mon compte</h1>

    <a href="{{ path('app_sortie') }}">créer une sortie</a>
    <a href="{{ path('app_sortie_vitrine') }}">Toute les sorties</a>






    {% for inscription in inscriptions %}
        <div class="inscription">
            <a href="{{ path('app_details', { id: inscription.sortie.id }) }}">
                        <p>Sortie : {{ inscription.sortie.nom }}</p>
                    </a>
            <p>Date : {{ inscription.sortie.dateHeure|date('d/m/Y H:i') }}</p>

            <form method="post" action="{{ path('app_sortie_desistement', {'id': inscription.sortie.id}) }}">
                <button class="btn btn-danger">Se désinscrire</button>
            </form>
        </div>
    {% else %}
        <a href="{{ path('app_sortie_vitrine') }}">Inscrivez vous a une sortie</a>
    {% endfor %}










</div>
{% endblock %}
