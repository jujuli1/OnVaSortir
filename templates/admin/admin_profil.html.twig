{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello Admin profil</h1>


    <select id="listeUser" class="d-none">
        <option value="">Liste des utilisateurs</option>

        {% for utilisateurs in utilisateur %}
                <option value="{{ path('app_profil_user', { id: utilisateurs.id }) }}">
                    {{ utilisateurs.nom }}
                </option>
            {% endfor %}

            <script>
            document.getElementById('listeUser').addEventListener('change', function() {
                if (this.value) {
                    window.location.href = this.value; // redirige vers le profil utilisateur
                }
            });
            </script>
    </select>




</div>
{% endblock %}
