{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>sorties</h1>

     <h1>Vitrine</h1>

     {% for label, messages in app.flashes %}
         {% for message in messages %}
             <div class="alert alert-{{ label }}">
                 {{ message }}
             </div>
         {% endfor %}
     {% endfor %}

     {%for sortie in sorties%}
     <div class="sortie">
             <a href="{{ path('app_details', { id: sortie.id }) }}">
                 <h2>{{ sortie.nom }}</h2></a>
             <p>{{ sortie.description }}</p>
             <p>Date : {{ sortie.dateHeure|date('d/m/Y H:i') }}</p>
             <p> Organisateur: {{ sortie.organisateur }}</p>
             <p> Status : {% if sortie.status == 1 %}
                                  Ouverte
                              {% else %}
                                  Fermée
                              {% endif %}</p>

              <form method="post" action="{{ path('app_sortie_inscription', {id: sortie.id}) }}">
                     <button class="btn btn-success">
                         Participer
                     </button>
                 </form>




         </div>
     {% else %}
         <p>Aucune sortie trouvée.</p>

     {% endfor %}






</div>
{% endblock %}
